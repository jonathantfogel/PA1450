    <section id="graph-filter">
        <form method="post" id="graph-filter-form" action="/Home/RequestWeatherData">
            <div class="input_wrap">
                <label>Interval</label>
                <select form="graph-filter-form" name="interval">
                    <option value="0">Timme</option>
                    <option value="1">Dag</option>
                    <option value="2">Månad</option>
                </select>
            </div>
            <div class="input_wrap">
                <label>Startinterval</label>
                <div class="input-trippleInterval">
                    <span>År</span>
                    <span>Månad</span>
                    <span>Dag</span>
                    <input type="number" placeholder="yyyy" value="2020" disabled>
                    <input type="number" placeholder="MM" min="1" max="5" name="start_interval_month">
                    <input type="number" placeholder="dd" min="1" max="31" name="start_interval_day">
                </div>
            </div>
            <div class="input_wrap">
                <label>Slutinterval</label>
                <div class="input-trippleInterval">
                    <span>År</span>
                    <span>Månad</span>
                    <span>Dag</span>
                    <input type="number" placeholder="yyyy" value="2020" disabled>
                    <input type="number" placeholder="MM" min="1" max="5" name="end_interval_month">
                    <input type="number" placeholder="dd" min="1" max="31" name="end_interval_day">
                </div>
            </div>
            <div class="input_wrap">
                <label>Attribut</label>
                <div class="inputCheck_wrap">
                    <label>
                        <input type="checkbox" name="attr_t" />
                        <span>Temperatur</span>
                    </label>
                </div>
                <div class="inputCheck_wrap">
                    <label>
                        <input type="checkbox" name="attr_msl" />
                        <span>Lufttryck</span>
                    </label>
                </div>
                <div class="inputCheck_wrap">
                    <label>
                        <input type="checkbox" name="attr_r" />
                        <span>Luftfuktighet</span>
                    </label>
                </div>
            </div>
            <input type="submit" id="submitFormbtn" value="Uppdatera" />
        </form>
    </section>
    <section id="graph-view">
        <!--<img src="~/Content/Home/Images/graph_example.jpg" />-->
        <div id="graph-view-graph_cont">
            <canvas id="myChart" width="256" height="144"></canvas>
        </div>
    </section>
</div>

